<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#182058"
    tools:context=".Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="163.7dp"
                android:layout_height="148.7dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="21.7dp"
                android:src="@drawable/visitor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.7dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="313dp"
                        android:layout_height="291dp"
                        android:layout_marginLeft="30.3dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/white_rounded_corner"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <com.example.welcome.customfonts.MyTextView_Poppins_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17.5dp"
                            android:gravity="center_horizontal"
                            android:text="LOGIN"
                            android:textColor="#333232"
                            android:textSize="23.3sp" />

                        <com.example.welcome.customfonts.MyTextView_Poppins_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17.3dp"
                            android:text="Username"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp"
                            tools:ignore="MissingClass" />

                        <com.example.welcome.customfonts.EditText_Poppins_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@android:color/transparent"
                            android:maxLines="1"
                            android:textColorHint="#c2c2c2"
                            android:textCursorDrawable="@drawable/grey_cursor_color"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6.7dp"
                            android:layout_marginRight="17.3dp"
                            android:background="#9e9e9e" />

                        <com.example.welcome.customfonts.MyTextView_Poppins_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:text="Password"
                            android:textColor="#9e9d9d"
                            android:textSize="12.3sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="17.3dp"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:inputType="textPassword"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:textColor="#333232"
                                android:textCursorDrawable="@drawable/grey_cursor_color" />

                            <com.example.welcome.customfonts.MyTextView_Poppins_Medium
                                android:id="@+id/txtforgot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center_horizontal"
                                android:text="I Forgot"
                                android:textColor="#38b5f2"
                                android:textSize="13.3sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6.7dp"
                            android:layout_marginRight="17.3dp"
                            android:layout_marginBottom="7dp"
                            android:background="#9e9e9e" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.example.welcome.customfonts.Button_Poppins_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/loginNow"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:text="Login" />


                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="7dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="21.7dp"
                    android:background="@drawable/rounded_corner" />

                <ImageView
                    android:id="@+id/image_signUp_id"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="80dp"
                    android:src="@drawable/circle_arrow"
                    android:contentDescription="TODO" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="54dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.example.welcome.customfonts.MyTextView_Poppins_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="New User?"
                    android:textColor="#FFFFFF"
                    android:textSize="13.3sp" />

                <com.example.welcome.customfonts.Button_Poppins_Regular
                    android:id="@+id/signup_id"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="@string/sign_up" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>